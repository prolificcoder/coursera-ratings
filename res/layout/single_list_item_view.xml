<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/CourseName"
            android:layout_width="264dp"
            android:layout_height="165dp"
            android:layout_weight="0.98"
            android:padding="10dip"
            android:textColor="#ffffff"
            android:textSize="25dip"
            android:textStyle="bold"
           />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="10.41"
            android:orientation="vertical" >

            <ImageButton
                android:id="@+id/Up"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/thumb_up" 
                android:contentDescription="@string/up_vote" />

            <TextView
                android:id="@+id/Rating"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:padding="10dip"
                android:textColor="#ffffff"
                android:textSize="15dip"
                android:textStyle="bold"
                android:contentDescription="@string/rating"  />

            <ImageButton
                android:id="@+id/Down"
                android:layout_width="50dip"
                android:layout_height="50dip"
                android:src="@drawable/thumb_down" 
                android:contentDescription="@string/down_vote"/>
        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/Url"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:autoLink="web"
        android:textStyle="bold"
        android:contentDescription="@string/course_url" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/desc_label"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <TextView
        android:id="@+id/Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#ffffff"
        android:textStyle="bold"     
         android:padding="1dp"
        android:background="@drawable/border_white"  
        android:contentDescription="@string/course_description"/>

</LinearLayout>